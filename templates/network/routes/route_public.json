{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Public Routing Creation v1.0",
  "Parameters": {
    "Vpc": {
      "Description": "VPC for this route.",
      "Type": "AWS::EC2::VPC::Id"
    },
    "Subnets": {
      "Description": "Subnets to associate public routing.",
      "Type": "List<AWS::EC2::Subnet::Id>"
    },
    "InternetGateway": {
      "Description": "The VPCs InternetGateway",
      "Type": "String",
      "MinLength": "12",
      "MaxLength": "12",
      "AllowedPattern": "igw-[a-z0-9]*"
    },
    "Environment": {
      "Description": "Name of the environment this VPC represents",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "14",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "can contain only lower case alphanumeric characters."
    }
  },
  "Outputs": {
    "RouteTable": {
      "Value": {"Ref": "PublicRouteTable"}
    }
  },
  "Resources": {
    "PublicRouteTable": {
      "Type": "AWS::EC2::RouteTable",
      "Properties": {
        "VpcId": {
          "Ref": "Vpc"
        },
        "Tags": [
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          },
          {
            "Key": "Network",
            "Value": "Public"
          }
        ]
      }
    },
    "PublicRoute": {
      "Type": "AWS::EC2::Route",
      "Properties": {
        "RouteTableId": {
          "Ref": "PublicRouteTable"
        },
        "DestinationCidrBlock": "0.0.0.0/0",
        "GatewayId": {
          "Ref": "InternetGateway"
        }
      }
    },
    "PublicSubnetRouteTableAssociationA": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "SubnetId": {
          "Fn::Select": [
            "0",
            {
              "Ref": "Subnets"
            }
          ]
        },
        "RouteTableId": {
          "Ref": "PublicRouteTable"
        }
      }
    },
    "PublicSubnetRouteTableAssociationB": {
      "Type": "AWS::EC2::SubnetRouteTableAssociation",
      "Properties": {
        "SubnetId": {
          "Fn::Select": [
            "1",
            {
              "Ref": "Subnets"
            }
          ]
        },
        "RouteTableId": {
          "Ref": "PublicRouteTable"
        }
      }
    }
  }
}
