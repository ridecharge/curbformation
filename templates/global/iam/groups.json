{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "IAM Group Setup v1.0",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment this VPC represents",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "14",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "can contain only lower case alphanumeric characters."
    }
  },
  "Outputs": {
    "AdminGroup": {
      "Value": {
        "Ref": "AdminGroup"
      }
    }
  },
  "Resources": {
    "AdminGroup": {
      "Type": "AWS::IAM::Group",
      "Properties": {
        "Path": "/",
        "Policies": [
          {
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": "*",
                  "Resource": "*"
                }
              ]
            },
            "PolicyName": "AdminGroup"
          }
        ]
      }
    }
  }
}
