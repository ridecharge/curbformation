{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "NTP Instance Security Group Creation v1.0",
  "Parameters": {
    "Vpc": {
      "Description": "VPC for this security group.",
      "Type": "AWS::EC2::VPC::Id"
    },
    "Environment": {
      "Description": "Name of the environment to create the security group in.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "14",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "can contain only lower case alphanumeric characters."
    }
  },
  "Outputs": {
    "SecurityGroup": {
      "Value": {
        "Ref": "SecurityGroup"
      }
    }
  },
  "Resources": {
    "SecurityGroup": {
      "Type": "AWS::EC2::SecurityGroup",
      "Properties": {
        "GroupDescription": "Rules for allowing access to NTP HA Nodes",
        "VpcId": {
          "Ref": "Vpc"
        },
        "SecurityGroupIngress": [
          {
            "IpProtocol": "udp",
            "FromPort": "123",
            "ToPort": "123",
            "CidrIp": "10.0.0.0/0"
          }
        ]
      }
    }
  }
}
