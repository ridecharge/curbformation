{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Bastion Host Creation v1.0",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment to launch this VPC into.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "8",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "Can contain 4 to 8 lower case alphanumeric characters."
    },
    "Vpc": {
      "Description": "VPC to launch this subnet into.",
      "Type": "AWS::EC2::VPC::Id"
    },
    "TemplateURLPrefix": {
      "Description": "URL prefix for this stack.",
      "Type": "String"
    },
    "AvailabilityZones": {
      "Description": "AvailabilityZones to launch networking stacks into.",
      "Type": "String"
    },
    "PublicSubnets": {
      "Description": "Subnets to launch Bastion Hosts into.",
      "Type": "String"
    },
    "VpcName": {
      "Description": "Name of the vpc this nat is created in.",
      "Type": "String"
    },
    "ImageId": {
      "Type": "String"
    }
  },
  "Outputs": {
    "SecurityGroup": {
      "Value": {
        "Fn::GetAtt": [
          "BastionSecurity",
          "Outputs.InternalSecurityGroup"
        ]
      }
    }
  },
  "Resources": {
    "BastionSecurity": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "Vpc": {"Ref": "Vpc"}
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "infra/security_groups/bastion_security.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    },
    "BastionInstances": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "SecurityGroups": {
            "Fn::GetAtt": [
              "BastionSecurity",
              "Outputs.ExternalSecurityGroup"
            ]
          },
          "Subnets": {
            "Ref": "PublicSubnets"
          },
          "AvailabilityZones": {
            "Ref": "AvailabilityZones"
          },
          "VpcName": {
            "Ref": "VpcName"
          },
          "ImageId": {"Ref": "ImageId"},
          "Type": "Bastion"
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "infra/autoscaling/autoscaling_pair.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    }
  }
}
