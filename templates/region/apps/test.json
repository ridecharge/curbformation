{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Test App Setup v1.0",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment these VPCs represent",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "14",
      "AllowedPattern": "[-_ a-zA-Z0-9]*",
      "ConstraintDescription": "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    "MasterUserPassword": {
      "Type": "String",
      "NoEcho": "true",
      "Default": "test"
    },
    "ApplicationVPCDBSubnetGroup": {
      "Type": "String"
    },
    "ApplicationVPCId": {
      "Description": "VPC for this application.",
      "Type": "AWS::EC2::VPC::Id"
    }
  },
  "Resources": {
    "SecurityGroups": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {"Ref": "Environment"},
          "VpcId": {"Ref": "ApplicationVPCId"},
          "ApplicationName": "Test",
          "LoadBalancerPort": "443"
        },
        "TemplateURL": {
          "Fn::Join": [
            "-",
            [
              "https://s3.amazonaws.com/curbformation",
              {
                "Ref": "Environment"
              },
              "templates/apps/components/security_group.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    },
    "Database": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {"Ref": "Environment"},
          "DatabaseSecurityGroups": {
            "Fn::GetAtt": [
              "SecurityGroups",
              "Outputs.DatabaseSecurityGroup"
            ]
          },
          "DBName": "test",
          "DBSubnetGroupName": {"Ref": "ApplicationVPCDBSubnetGroup"}
        },
        "TemplateURL": {
          "Fn::Join": [
            "-",
            [
              "https://s3.amazonaws.com/curbformation",
              {
                "Ref": "Environment"
              },
              "templates/apps/components/database.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    }
  }
}
