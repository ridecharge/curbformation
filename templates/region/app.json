{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Test App Setup v1.0",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment to deploy this app into.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "14",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "can contain only lower case alphanumeric characters."
    },
    "ApplicationVPCDBSubnetGroup": {
      "Type": "String"
    },
    "ApplicationVPCPrivateSubnets": {
      "Type": "List<AWS::EC2::Subnet::Id>"
    },
    "ApplicationVPC": {
      "Description": "VPC for this application.",
      "Type": "AWS::EC2::VPC::Id"
    },
    "MasterUserPassword": {
      "Description": "Password for RDS instance Master User",
      "Type": "String",
      "NoEcho": "true"
    },
    "DatabaseType": {
      "Description": "The database type to setup.  Mysql or Postgres.",
      "Type": "String",
      "Default": "postgres",
      "AllowedValues": [
        "postgres",
        "mysql",
        "none"
      ]
    },
    "LoadBalancerType": {
      "Type": "String",
      "AllowedValues": [
        "internal",
        "internet-facing"
      ]
    }
  },
  "Conditions": {
    "CreateDatabase": {
      "Fn::Not": [
        {
          "Fn::Equals": [
            {"Ref": "DatabaseType"},
            "none"
          ]
        }
      ]
    }
  },
  "Outputs": {
    "DatabaseEndpoint": {
      "Condition": "CreateDatabase",
      "Value": {
        "Fn::GetAtt": [
          "Database",
          "Outputs.Endpoint"
        ]
      }
    }
  },
  "Resources": {
    "InstanceProfile": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "ApplicationName": {"Ref": "ApplicationName"},
          "Environment": {"Ref": "Environment"}
        },
        "TemplateURL": {
          "Fn::Join": [
            "-",
            [
              "https://s3.amazonaws.com/curbformation",
              {
                "Ref": "Environment"
              },
              "templates/apps/components/profile.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    }
  },
  "SecurityGroups": {
    "Type": "AWS::CloudFormation::Stack",
    "Properties": {
      "Parameters": {
        "Environment": {"Ref": "Environment"},
        "Vpc": {"Ref": "ApplicationVPC"},
        "ApplicationName": {"Ref": "ApplicationName"},
        "LoadBalancerType": {
          "Ref": "LoadBalancerType"
        },
        "DatabaseType": {
          "Ref": "DatabaseType"
        }
      },
      "TemplateURL": {
        "Fn::Join": [
          "-",
          [
            "https://s3.amazonaws.com/curbformation",
            {
              "Ref": "Environment"
            },
            "templates/apps/components/security_group.json"
          ]
        ]
      },
      "TimeoutInMinutes": "30"
    }
  },
  "S3Buckets": {
    "Type": "AWS::CloudFormation::Stack",
    "Properties": {
      "Parameters": {
        "Environment": {"Ref": "Environment"},
        "ApplicationName": {"Ref": "ApplicationName"}
      },
      "TemplateURL": {
        "Fn::Join": [
          "-",
          [
            "https://s3.amazonaws.com/curbformation",
            {
              "Ref": "Environment"
            },
            "templates/apps/components/s3.json"
          ]
        ]
      },
      "TimeoutInMinutes": "30"
    }
  },
  "Database": {
    "Type": "AWS::CloudFormation::Stack",
    "Condition": "CreateDatabase",
    "Properties": {
      "Parameters": {
        "Environment": {"Ref": "Environment"},
        "ApplicationName": {"Ref": "ApplicationName"},
        "DBSubnetGroupName": {"Ref": "ApplicationVPCDBSubnetGroup"},
        "Vpc": {"Ref": "ApplicationVPC"}
      },
      "TemplateURL": {
        "Fn::Join": [
          "-",
          [
            "https://s3.amazonaws.com/curbformation",
            {
              "Ref": "Environment"
            },
            "templates/apps/components/database.json"
          ]
        ]
      },
      "TimeoutInMinutes": "30"
    }
  }
}

