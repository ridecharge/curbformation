{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Subnet Pair Creation v1.0.",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment this VPC represents",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "14",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "can contain only lower case alphanumeric characters."
    },
    "AvailabilityZones": {
      "Description": "AvailabilityZone to launch this subnet into.",
      "Type": "CommaDelimitedList"
    },
    "CidrBlocks": {
      "Description": "CidrBlocks for AZs this VPC",
      "Type": "CommaDelimitedList"
    },
    "Vpc": {
      "Description": "VPC to launch this subnet into.",
      "Type": "AWS::EC2::VPC::Id"
    },
    "SubnetType": {
      "Description": "Public or Private for the Network tag",
      "Type": "String",
      "AllowedValues": [
        "Public",
        "Private"
      ]
    }
  },
  "Outputs": {
    "Subnets": {
      "Value": {
        "Fn::Join": [
          ",",
          [
            {
              "Ref": "SubnetA"
            },
            {
              "Ref": "SubnetB"
            }
          ]
        ]
      }
    },
    "DBSubnetGroup": {
      "Value": {
        "Ref": "DBSubnetGroup"
      },
      "Condition": "CreateDBSubnetGroup"

    }
  },
  "Conditions": {
    "CreateDBSubnetGroup": {
      "Fn::Equals": [
        {"Ref": "SubnetType"},
        "Private"
      ]
    }
  },
  "Resources": {
    "SubnetA": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "AvailabilityZone": {
          "Fn::Select": [
            "0",
            {
              "Ref": "AvailabilityZones"
            }
          ]
        },
        "VpcId": {
          "Ref": "Vpc"
        },
        "CidrBlock": {
          "Fn::Select": [
            "0",
            {
              "Ref": "CidrBlocks"
            }
          ]
        },
        "Tags": [
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          },
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "-",
                [
                  {
                    "Ref": "Environment"
                  },
                  {
                    "Ref": "SubnetType"
                  },
                  "A"
                ]
              ]
            }
          },
          {
            "Key": "Network",
            "Value": {
              "Ref": "SubnetType"
            }
          }
        ]
      }
    },
    "SubnetB": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "AvailabilityZone": {
          "Fn::Select": [
            "1",
            {
              "Ref": "AvailabilityZones"
            }
          ]
        },
        "VpcId": {
          "Ref": "Vpc"
        },
        "CidrBlock": {
          "Fn::Select": [
            "1",
            {
              "Ref": "CidrBlocks"
            }
          ]
        },
        "Tags": [
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          },
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "-",
                [
                  {
                    "Ref": "Environment"
                  },
                  {
                    "Ref": "SubnetType"
                  },
                  "B"
                ]
              ]
            }
          },
          {
            "Key": "Network",
            "Value": {
              "Ref": "SubnetType"
            }
          }
        ]
      }
    },
    "DBSubnetGroup": {
      "Type": "AWS::RDS::DBSubnetGroup",
      "Condition": "CreateDBSubnetGroup",
      "Properties": {
        "DBSubnetGroupDescription": {
          "Fn::Join": [
            " ",
            [
              {"Ref": "Environment"},
              " Environment Database Subnet Group"
            ]
          ]
        },
        "SubnetIds": [
          {"Ref": "SubnetA"},
          {"Ref": "SubnetB"}
        ]
      }
    }
  }
}
