{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Subnet Configuration v1.0.",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment this VPC represents",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "14",
      "AllowedPattern": "[-_ a-zA-Z0-9]*",
      "ConstraintDescription": "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    "CidrBlockPrefix": {
      "Description": "CidrBlock for this VPC",
      "Type": "String",
      "MinLength": "3",
      "MaxLength": "7",
      "Default": "10.0",
      "AllowedPattern": "(\\d{1,3})\\.(\\d{1,3})",
      "ConstraintDescription": "Must be the first 2 bytes of a CidrBlock"
    },
    "TemplateURLPrefix": {
      "Description": "URL prefix for this stack.",
      "Type": "String"
    },
    "Vpc": {
      "Description": "VPC to launch this subnet into.",
      "Type": "AWS::EC2::VPC::Id"
    },
    "AvailabilityZones": {
      "Description": "AvailabilityZone to launch this subnet into.",
      "Type": "String"
    }
  },
  "Outputs": {
    "PrivateSubnets": {
      "Value": {
        "Fn::GetAtt": [
          "PrivateSubnets",
          "Outputs.Subnets"
        ]
      },
      "Description": "List of private subnets."
    },
    "PublicSubnets": {
      "Value": {
        "Fn::GetAtt": [
          "PublicSubnets",
          "Outputs.Subnets"
        ]
      },
      "Description": "List of public subnets."
    },
    "DBSubnetGroup":{
      "Value":{
        "Fn::GetAtt":[
          "PrivateSubnets",
          "Outputs.DBSubnetGroup"
        ]
      }
    }
  },
  "Resources": {
    "PublicSubnets": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "CidrBlocks": {
            "Fn::Join": [
              ",",
              [
                {
                  "Fn::Join": [
                    ".",
                    [
                      {
                        "Ref": "CidrBlockPrefix"
                      },
                      "32.0/20"
                    ]
                  ]
                },
                {
                  "Fn::Join": [
                    ".",
                    [
                      {
                        "Ref": "CidrBlockPrefix"
                      },
                      "96.0/20"
                    ]
                  ]
                }
              ]
            ]
          },
          "AvailabilityZones": {
            "Ref": "AvailabilityZones"
          },
          "Vpc": {
            "Ref": "Vpc"
          },
          "SubnetType": "Public"
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "subnets/subnet_pair.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    },
    "PrivateSubnets": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "CidrBlocks": {
            "Fn::Join": [
              ",",
              [
                {
                  "Fn::Join": [
                    ".",
                    [
                      {
                        "Ref": "CidrBlockPrefix"
                      },
                      "0.0/19"
                    ]
                  ]
                },
                {
                  "Fn::Join": [
                    ".",
                    [
                      {
                        "Ref": "CidrBlockPrefix"
                      },
                      "64.0/19"
                    ]
                  ]
                }
              ]
            ]
          },
          "AvailabilityZones": {
            "Ref": "AvailabilityZones"
          },
          "Vpc": {
            "Ref": "Vpc"
          },
          "SubnetType": "Private"
        },
        "TemplateURL": {
          "Fn::Join": [
            "/",
            [
              {
                "Ref": "TemplateURLPrefix"
              },
              "subnets/subnet_pair.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    }
  }
}
