{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Network Setup v1.0",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment these VPCs represent",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "14",
      "AllowedPattern": "[-_ a-zA-Z0-9]*",
      "ConstraintDescription": "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    "NATRoleProfileId": {
      "Type": "String",
      "Description": "Instance Profile to allow NATs to restart each other."
    }
  },
  "Mappings": {
    "RegionMappings": {
      "us-west-1": {
        "AvailabilityZones": [
          "us-west-1a",
          "us-west-1b"
        ]
      },
      "us-east-1": {
        "AvailabilityZones": [
          "us-east-1a",
          "us-east-1c"
        ]
      }
    }
  },
  "Outputs": {
    "ApplicationVPCId": {
      "Value": {
        "Fn::GetAtt": [
          "Network",
          "Outputs.ApplicationVPCId"
        ]
      }
    },
    "InfrastructureVPCId": {
      "Value": {
        "Fn::GetAtt": [
          "Network",
          "Outputs.InfrastructureVPCId"
        ]
      }
    },
    "InfrastructureVPCPrivateSubnetIds": {
      "Value": {
        "Fn::GetAtt": [
          "Network",
          "Outputs.InfrastructureVPCPrivateSubnetIds"
        ]
      }
    },
    "ApplicationVPCPrivateSubnetIds": {
      "Value": {
        "Fn::GetAtt": [
          "Network",
          "Outputs.ApplicationVPCPrivateSubnetIds"
        ]
      }
    },
    "ApplicationVPCDBSubnetGroup": {
      "Value": {
        "Fn::GetAtt": [
          "Network",
          "Outputs.ApplicationVPCDBSubnetGroup"
        ]
      }
    }
  },
  "Resources": {
    "Network": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "NATRoleProfileId": {
            "Ref": "NATRoleProfileId"
          },
          "AvailabilityZones": {
            "Fn::Join": [
              ",",
              {
                "Fn::FindInMap": [
                  "RegionMappings",
                  {
                    "Ref": "AWS::Region"
                  },
                  "AvailabilityZones"
                ]
              }
            ]
          },
          "TemplateURLPrefix": {
            "Fn::Join": [
              "-",
              [
                "https://s3.amazonaws.com/curbformation",
                {
                  "Ref": "Environment"
                },
                "templates/network"
              ]
            ]
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "-",
            [
              "https://s3.amazonaws.com/curbformation",
              {
                "Ref": "Environment"
              },
              "templates/network/vpcs.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    }
  }
}
