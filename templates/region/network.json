{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Network Setup v1.0",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment these VPCs represent",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "14",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "can contain only lower case alphanumeric characters."
    },
    "NATInstanceProfile": {
      "Type": "String",
      "Description": "Instance Profile to allow NATs to restart each other."
    }
  },
  "Mappings": {
    "RegionMappings": {
      "us-west-1": {
        "AvailabilityZones": [
          "us-west-1a",
          "us-west-1b"
        ]
      },
      "us-east-1": {
        "AvailabilityZones": [
          "us-east-1a",
          "us-east-1c"
        ]
      }
    }
  },
  "Outputs": {
    "ApplicationVPC": {
      "Value": {
        "Fn::GetAtt": [
          "Network",
          "Outputs.ApplicationVPC"
        ]
      }
    },
    "InfrastructureVPC": {
      "Value": {
        "Fn::GetAtt": [
          "Network",
          "Outputs.InfrastructureVPC"
        ]
      }
    },
    "InfrastructureVPCPrivateSubnets": {
      "Value": {
        "Fn::GetAtt": [
          "Network",
          "Outputs.InfrastructureVPCPrivateSubnets"
        ]
      }
    },
    "ApplicationVPCPrivateSubnets": {
      "Value": {
        "Fn::GetAtt": [
          "Network",
          "Outputs.ApplicationVPCPrivateSubnets"
        ]
      }
    },
    "ApplicationVPCDBSubnetGroup": {
      "Value": {
        "Fn::GetAtt": [
          "Network",
          "Outputs.ApplicationVPCDBSubnetGroup"
        ]
      }
    }
  },
  "Resources": {
    "Network": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "NATInstanceProfile": {
            "Ref": "NATInstanceProfile"
          },
          "AvailabilityZones": {
            "Fn::Join": [
              ",",
              {
                "Fn::FindInMap": [
                  "RegionMappings",
                  {
                    "Ref": "AWS::Region"
                  },
                  "AvailabilityZones"
                ]
              }
            ]
          },
          "TemplateURLPrefix": {
            "Fn::Join": [
              "-",
              [
                "https://s3.amazonaws.com/curbformation",
                {
                  "Ref": "Environment"
                },
                "templates/network"
              ]
            ]
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "-",
            [
              "https://s3.amazonaws.com/curbformation",
              {
                "Ref": "Environment"
              },
              "templates/network/vpcs.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    }
  }
}
