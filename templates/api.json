{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "API Application Setup v1.0",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment to deploy this app into.",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "14",
      "AllowedPattern": "[a-z0-9]*",
      "ConstraintDescription": "can contain only lower case alphanumeric characters."
    },
    "ApplicationVPCDBSubnetGroup": {
      "Type": "String"
    },
    "ApplicationVPCPrivateSubnets": {
      "Type": "List<AWS::EC2::Subnet::Id>"
    },
    "ApplicationVPC": {
      "Description": "VPC for this application.",
      "Type": "AWS::EC2::VPC::Id"
    },
    "ApplicationName": {
      "Description": "Name of the database to be created in the instance.",
      "Type": "String",
      "AllowedPattern": "[a-z]*",
      "ConstraintDescription": "DBName must be lower case alpha characters only."
    },
    "DatabaseType": {
      "Description": "The database type to setup.  Mysql or Postgres.",
      "Type": "String",
      "Default": "postgres",
      "AllowedValues": [
        "postgres",
        "mysql",
        "none"
      ]
    },
    "LoadBalancerType": {
      "Type": "String",
      "Default": "internet-facing",
      "AllowedValues": [
        "internal",
        "internet-facing"
      ]
    }
  },
  "Resources": {
    "InstanceProfile": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "ApplicationName": {"Ref": "ApplicationName"},
          "Environment": {"Ref": "Environment"}
        },
        "TemplateURL": {
          "Fn::Join": [
            "-",
            [
              "https://s3.amazonaws.com/curbformation",
              {
                "Ref": "Environment"
              },
              "templates/apps/components/profile.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    },
    "S3Buckets": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {"Ref": "Environment"},
          "ApplicationName": {"Ref": "ApplicationName"}
        },
        "TemplateURL": {
          "Fn::Join": [
            "-",
            [
              "https://s3.amazonaws.com/curbformation",
              {
                "Ref": "Environment"
              },
              "templates/apps/components/s3.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    },
    "Cluster": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "ApplicationName": {"Ref": "ApplicationName"},
          "Environment": {"Ref": "Environment"},
          "Vpc": {"Ref": "ApplicationVPC"}
        },
        "TemplateURL": {
          "Fn::Join": [
            "-",
            [
              "https://s3.amazonaws.com/curbformation",
              {
                "Ref": "Environment"
              },
              "templates/apps/components/cluster.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    },
    "Database": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {"Ref": "Environment"},
          "ApplicationName": {"Ref": "ApplicationName"},
          "DBSubnetGroupName": {"Ref": "ApplicationVPCDBSubnetGroup"},
          "Vpc": {"Ref": "ApplicationVPC"},
          "InstanceSecurityGroup": {
            "Fn::GetAtt": [
              "Cluster",
              "Outputs.InstanceSecurityGroup"
            ]
          }
        },
        "TemplateURL": {
          "Fn::Join": [
            "-",
            [
              "https://s3.amazonaws.com/curbformation",
              {
                "Ref": "Environment"
              },
              "templates/apps/components/database.json"
            ]
          ]
        },
        "TimeoutInMinutes": "30"
      }
    }
  }
}

