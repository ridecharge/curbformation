#!/bin/sh
if [ "curbformation-templates" != "${PWD##*/}" ]; then
	echo This script must be run from the curbformation-templates project root
fi

ENVIRONMENT=$1
if [ -z "$ENVIRONMENT" ]; then
	ENVIRONMENT=test
fi

S3_BUCKET_URI=s3://curbformation-$ENVIRONMENT-templates
echo Syncing network templates to $S3_BUCKET_URI

aws s3 sync . $S3_BUCKET_URI --delete --exclude "*" --include "*.json"
