{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Subnet Creation v1.0.  Creates a pair of subnets.",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment this VPC represents",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "14",
      "AllowedPattern": "[-_ a-zA-Z0-9]*",
      "ConstraintDescription": "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    "AvailabilityZones": {
      "Description": "AvailabilityZone to launch this subnet into.",
      "Type": "CommaDelimitedList"
    },
    "CidrBlocks": {
      "Description": "CidrBlocks for AZs this VPC",
      "Type": "CommaDelimitedList"
    },
    "VpcId": {
      "Description": "VPC to launch this subnet into.",
      "Type": "String",
      "MinLength": "12",
      "MaxLength": "12",
      "AllowedPattern": "vpc-[a-z0-9]*",
      "ConstraintDescription": "Must be a valid VPC id."
    },
    "SubnetType": {
      "Description": "Public or Private for the Network tag",
      "Type": "String",
      "AllowedValues": [
        "Public",
        "Private"
      ]
    }
  },
  "Outputs": {
    "Subnets": {
      "Value": {
        "Fn::Join": [
          ",",
          [
            {
              "Ref": "SubnetA"
            },
            {
              "Ref": "SubnetB"
            }
          ]
        ]
      }
    }
  },
  "Resources": {
    "SubnetA": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "AvailabilityZone": {
          "Fn::Select": [
            "0",
            {
              "Ref": "AvailabilityZones"
            }
          ]
        },
        "VpcId": {
          "Ref": "VpcId"
        },
        "CidrBlock": {
          "Fn::Select": [
            "0",
            {
              "Ref": "CidrBlocks"
            }
          ]
        },
        "Tags": [
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          },
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "-",
                [
                  {
                    "Ref": "Environment"
                  },
                  {
                    "Ref": "SubnetType"
                  },
                  "A"
                ]
              ]
            }
          },
          {
            "Key": "Network",
            "Value": {
              "Ref": "SubnetType"
            }
          }
        ]
      }
    },
    "SubnetB": {
      "Type": "AWS::EC2::Subnet",
      "Properties": {
        "AvailabilityZone": {
          "Fn::Select": [
            "1",
            {
              "Ref": "AvailabilityZones"
            }
          ]
        },
        "VpcId": {
          "Ref": "VpcId"
        },
        "CidrBlock": {
          "Fn::Select": [
            "1",
            {
              "Ref": "CidrBlocks"
            }
          ]
        },
        "Tags": [
          {
            "Key": "Environment",
            "Value": {
              "Ref": "Environment"
            }
          },
          {
            "Key": "Name",
            "Value": {
              "Fn::Join": [
                "-",
                [
                  {
                    "Ref": "Environment"
                  },
                  {
                    "Ref": "SubnetType"
                  },
                  "B"
                ]
              ]
            }
          },
          {
            "Key": "Network",
            "Value": {
              "Ref": "SubnetType"
            }
          }
        ]
      }
    }
  }
}