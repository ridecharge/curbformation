{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "Network Configuration v1.0",
  "Parameters": {
    "Environment": {
      "Description": "Name of the environment this VPC represents",
      "Type": "String",
      "MinLength": "4",
      "MaxLength": "14",
      "AllowedPattern": "[-_ a-zA-Z0-9]*",
      "ConstraintDescription": "can contain only alphanumeric characters, spaces, dashes and underscores."
    },
    "CidrBlockPrefix": {
      "Description": "CidrBlock for this VPC",
      "Type": "String",
      "MinLength": "3",
      "MaxLength": "7",
      "AllowedPattern": "(\\d{1,3})\\.(\\d{1,3})",
      "ConstraintDescription": "Must be the first 2 bytes of a CidrBlock"
    },
    "AvailabilityZones": {
      "Description": "AvailabilityZones to launch networking stacks into.",
      "Type": "String"
    }
  },
  "Resources": {
    "VPC": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "CidrBlock": {
            "Fn::Join": [
              ".",
              [
                {
                  "Ref": "CidrBlockPrefix"
                },
                "0.0/16"
              ]
            ]
          }
        },
        "TemplateURL": "https://s3.amazonaws.com/cf-templates-curb/network/vpc.json",
        "TimeoutInMinutes": "30"
      }
    },
    "Subnets": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "CidrBlockPrefix": {
            "Ref": "CidrBlockPrefix"
          },
          "VpcId": {
            "Fn::GetAtt": [
              "VPC",
              "Outputs.VpcId"
            ]
          },
          "AvailabilityZones": {
            "Ref": "AvailabilityZones"
          }
        },
        "TemplateURL": "https://s3.amazonaws.com/cf-templates-curb/network/subnets/subnets.json",
        "TimeoutInMinutes": "30"
      }
    },
    "Routes": {
      "Type": "AWS::CloudFormation::Stack",
      "Properties": {
        "Parameters": {
          "Environment": {
            "Ref": "Environment"
          },
          "PublicSubnetIds": {
            "Fn::GetAtt": [
              "Subnets",
              "Outputs.PublicSubnets"
            ]
          },
          "PrivateSubnetIds": {
            "Fn::GetAtt": [
              "Subnets",
              "Outputs.PrivateSubnets"
            ]
          },
          "VpcId": {
            "Fn::GetAtt": [
              "VPC",
              "Outputs.VpcId"
            ]
          },
          "InternetGatewayId": {
            "Fn::GetAtt": [
              "VPC",
              "Outputs.InternetGatewayId"
            ]
          },
          "CidrBlock": {
            "Fn::Join": [
              ".",
              [
                {
                  "Ref": "CidrBlockPrefix"
                },
                "0.0/16"
              ]
            ]
          }
        },
        "TemplateURL": "https://s3.amazonaws.com/cf-templates-curb/network/routes/routes.json",
        "TimeoutInMinutes": "30"
      }
    }
  }
}